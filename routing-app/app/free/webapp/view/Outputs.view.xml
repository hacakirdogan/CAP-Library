<mvc:View
    controllerName="free.controller.Main"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:vbm="sap.ui.vbm"
    xmlns:html="http://www.w3.org/1999/xhtml"
    displayBlock="true"
>
    <NavContainer
        navigationFinished="onNavigationFinished"
        id="navConII"
        width="auto"
        height="35em"
        class="navContainerControl sapUiSmallMarginBottom"
    >
        <Page
            id="p3"
            title="Route"
        >
            <headerContent>
                <Button
                    type="Emphasized"
                    text="List"
                    press="handleNavII"
                >
                    <customData>
                        <core:CustomData
                            key="target"
                            value="p4"
                        />
                    </customData>
                </Button>
            </headerContent>
            <html:iframe
                src="./route.html"
                height="98%"
                width="100%"
            />
        </Page>
        <Page
            id="p4"
            title="Route"
        >
            <headerContent>
                <Button
                    icon="sap-icon://excel-attachment"
                    press="onExport"
                />
                <Button
                    type="Emphasized"
                    text="Map"
                    press="handleNavII"
                >
                    <customData>
                        <core:CustomData
                            key="target"
                            value="p3"
                        />
                    </customData>
                </Button>
            </headerContent>
            <Table
                id="routeTable"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
                    path: '/Route',
                    sorter: [{
                        path: 'vehicle'
                    }, {
                        path: 'arrival'
                    }]
                }"
            >
                <columns>
                    <Column>
                        <Text text="Vehicle" />
                    </Column>
                    <Column>
                        <Text text="Customer" />
                    </Column>
                    <Column>
                        <Text text="Arrival" />
                    </Column>
                    <Column>
                        <Text text="Departure" />
                    </Column>
                    <Column>
                        <Text text="Distance" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{vehicle}" />
                            <Text text="{customer}" />
                            <Text text="{arrival}" />
                            <Text text="{departure}" />
                            <Text text="{distance}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Page>
    </NavContainer>
</mvc:View>
